#! /bin/sh

function initPkg ()
{
   cd "$1"
   echo "Bootstrap..."
   ./bootstrap
   echo "Configure..."
   ./configure
   echo "Distcheck..."
   make distcheck
}

echo "Generate packages..."
package-create-local -p toto
package-create-local -p tata -dd toto
package-create-local -p titi -d tata -dd toto

initPkg toto
initPkg tata
initPkg titi

